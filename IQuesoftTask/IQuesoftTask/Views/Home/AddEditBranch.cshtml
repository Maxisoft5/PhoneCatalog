@model IQuesoftTask.DAL.Models.Branch

@{
    Layout = null;
}

@using (Html.BeginForm("AddEditBranch", "Home", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        @Html.LabelFor(model => model.Country, new { @class = "control-label" })
        @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Country)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Town, new { @class = "control-label" })
        @Html.EditorFor(model => model.Town, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Town)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Address, new { @class = "control-label" })
        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.MonthRevenue, new { @class = "control-label" })
        @Html.EditorFor(model => model.MonthRevenue, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.QuartalRevenue, new { @class = "control-label" })
        @Html.EditorFor(model => model.QuartalRevenue, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}
